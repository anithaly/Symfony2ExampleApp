{% extends '::base.html.twig' %}

{% block body -%}
    <div class="page-header">
        <h1>Log list</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>User</th>
                <th>Class</th>
                <th>Object name</th>
                <th>Action</th>
                <th>Date</th>
                <th>Data before</th>
                <th>Data after</th>
            </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            <tr>
                <td>{{ log.user.username }}</td>
                <td>{{ log.objectClass }}</td>
                <td>{{ log.objectName }}</td>
                <td>{{ log.action }}</td>
                <td>{{ log.loggedAt.format('d-m-Y H:i:s') }}</td>
                <td>{{ log.beforeData|array2string|raw }}</td>
                <td>{{ log.data|array2string|raw }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
