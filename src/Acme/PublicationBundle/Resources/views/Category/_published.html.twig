{# _published.html.twig publication list #}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('categories_get_category', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            </td>
            <td>
            <ul>
                <li>
                    <a href="{{ path('categories_get_category', { 'id': entity.id }) }}">show</a>
                </li>
                <li>
                    <a href="{{ path('categories_edit_category', { 'id': entity.id }) }}">edit</a>
                </li>
            </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
