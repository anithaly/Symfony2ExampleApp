{% if entities %}
<h2>Comment list</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Content</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.email }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.content }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endif %}